								 <select name="seller_area_selection_type" class="pts-form-control">									
									
								 {% if seller_area_selection_type %}
								    <option value="0">{{ text_all_sellerarea }}</option>
									<option value="1" selected="selected" >{{ text_selected_sellerarea }}</option>
								 {% else %}
								    <option value="0" selected="selected">{{ text_all_sellerarea }}</option>
									<option value="1">{{ text_selected_sellerarea }}</option>

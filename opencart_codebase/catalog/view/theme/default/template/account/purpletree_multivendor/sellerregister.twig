								    <input type="text" name="sellerarea" value="" placeholder="{{ entry_sellerarea }}" id="input-sellerarea" class="pts-form-control"/>								   
								 {% else %}
								    <input type="text" name="sellerarea" value="" disabled id="input-sellerarea" class="pts-form-control"/>
